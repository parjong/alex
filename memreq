#!/bin/bash

set -eo pipefail

VERBOSE=0

CMDLINE=$(getopt -o 'v' --long 'verbose' -- "$@")
eval set -- "$CMDLINE"

while true; do
  TOKEN="$1"; shift
  case "$TOKEN" in
    -v|--verbose)
      VERBOSE=1
      ;;
    --)
      break
      ;;
  esac
done

SCRIPTS=()

# Q. Why Python logging is not working..?
SCRIPTS+=("spo/mas/example/enable_logging.INFO.mas")
if [[ $VERBOSE -ne 0 ]]; then
  SCRIPTS+=("spo/mas/example/basic/summarize.mas")
fi
SCRIPTS+=("spo/mas/example/basic/compute.wsize.mas")
SCRIPTS+=("spo/mas/example/roofline/compute.Q.mas")
SCRIPTS+=("spo/mas/example/roofline/compute.W.TFL.mas")

spo/mas/dev analyze-tflite --model "$1" compute.memreq.mas
